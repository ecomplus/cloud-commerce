{
  "extends": [
    "config:base",
    "schedule:earlyMondays"
  ],
  "rangeStrategy": "bump",
  "labels": [
    "dependencies"
  ],
  "dependencyDashboard": false,
  "ignoreDeps": [
    "node",
    "pnpm"
  ],
  "ignorePaths": [
    "**/src/**",
    "**/lib/**"
  ],
  "packageRules": [
    {
      "groupName": "Non-major dependencies",
      "groupSlug": "many-minor-patch",
      "matchPackagePatterns": [
        "*"
      ],
      "excludePackageNames": [
        "astro",
        "vue",
        "typescript",
        "pagarme"
      ],
      "excludePackagePrefixes": [
        "@astrojs/"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "minimumReleaseAge": "3 days"
    },
    {
      "groupName": "Non-major dependencies",
      "groupSlug": "many-minor-patch",
      "matchPackagePatterns": [
        "*"
      ],
      "excludePackagePrefixes": [
        "@astrojs/"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "matchCurrentVersion": "/^0/",
      "minimumReleaseAge": "3 days"
    },
    {
      "groupName": "Astro",
      "matchPackageNames": [
        "astro"
      ],
      "matchPackagePrefixes": [
        "@astrojs/"
      ],
      "minimumReleaseAge": "2 days"
    },
    {
      "groupName": "Vue",
      "matchPackageNames": [
        "vue"
      ],
      "matchPackagePrefixes": [
        "@vue/"
      ],
      "minimumReleaseAge": "2 days"
    }
  ]
}

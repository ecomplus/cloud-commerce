{
  "editor.tabSize": 2,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "css.lint.unknownAtRules": "ignore",
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow": "/.github/workflows/**/*.yml",
    "https://json.schemastore.org/github-action": "/action.yml"
  },
  "tailwindCSS.experimental.configFile": {
    "packages/storefront/tailwind.config.cjs": "packages/**",
    "store/functions/ssr/tailwind.config.cjs": "store/**",
    "ecomplus-stores/barradoce/functions/ssr/tailwind.config.cjs": "ecomplus-stores/barradoce/**"
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "astro",
    "typescript",
    "typescriptreact"
  ]
}

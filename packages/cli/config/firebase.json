{
  "functions": [
    {
      "predeploy": "npm run build -- --codebase many",
      "source": "functions/many",
      "codebase": "many"
    },
    {
      "predeploy": "npm run build -- --codebase with-apps",
      "source": "functions/with-apps",
      "codebase": "with-apps"
    },
    {
      "predeploy": "npm run build -- --codebase ssr",
      "source": "functions/ssr",
      "codebase": "ssr",
      "ignore": [
        ".git",
        ".runtimeconfig.json",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "node_modules",
        ".turbo",
        "_astro",
        "dist/client",
        "functions/ssr/dist/client",
        "/public",
        "functions/ssr/public",
        "/src",
        "functions/ssr/src"
      ]
    }
  ],
  "hosting": {
    "public": "functions/ssr/dist/client",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/index",
        "destination": "/",
        "type": 301
      }
    ],
    "rewrites": [
      {
        "source": "/",
        "function": "ssr",
        "region": "us-east4"
      },
      {
        "source": "/_api/modules/**",
        "function": "modules",
        "region": "us-east4"
      },
      {
        "source": "/_api/passport/**",
        "function": "passport",
        "region": "us-east4"
      },
      {
        "source": "/_feeds/**",
        "function": "feeds",
        "region": "us-east4"
      },
      {
        "source": "/sitemap-catalog.xml",
        "function": "feeds",
        "region": "us-east4"
      },
      {
        "source": "/_api/repos/**/{git,contents,issues,branches,pulls,commits}/**",
        "function": "feeds",
        "region": "us-east4"
      },
      {
        "source": "/.*/git/**",
        "function": "feeds",
        "region": "us-east4"
      },
      {
        "source": "**/!(*(*.)ico|*(*.)png|*(*.)map)",
        "function": "ssr",
        "region": "us-east4"
      }
    ],
    "headers": [
      {
        "source": "/img/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=300, s-maxage=60, must-revalidate"
          }
        ]
      },
      {
        "source": "/assets/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=86400, s-maxage=600"
          }
        ]
      },
      {
        "source": "/app/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=600, stale-while-revalidate=900"
          }
        ]
      },
      {
        "source": "/_astro/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "/_image",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ],
    "cleanUrls": true
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "pubsub": {
      "port": 8085
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true
    }
  },
  "remoteconfig": {
    "template": "remoteconfig.template.json"
  }
}

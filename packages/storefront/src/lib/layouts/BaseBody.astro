---
import '@@sf/assets/preflight.css';
import '@@sf/assets/base.css';
import '@@sf/assets/forms.css';
import '@@sf/assets/tooltip.css';
import 'uno.css';
import Picture from '@@sf/components/Picture.astro';

const { settings } = Astro.locals.routeContext;
---

<body>
  <div id="teleported-overlap" class="relative z-50"></div>
  <div id="teleported-top" class="relative z-10"></div>
  <slot />
  <slot name="before-body-end" />
  <div id="teleported-bottom" class="relative z-10"></div>
  {settings.icon &&
    <Picture
      src={settings.icon}
      alt="Icon"
      formats={['png']}
      widths={[32, 192, 512]}
      sizes="32px"
      class="hidden absolute"
      style="bottom: -1000px"
      hasImg={false}
    />
  }
</body>

<style is:global>
  /* <Carousel> */
  [data-carousel-wrapper]::-webkit-scrollbar {
    display: none;
  }
</style>

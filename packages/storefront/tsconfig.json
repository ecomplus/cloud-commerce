{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@@i18n": ["./node_modules/@cloudcommerce/i18n/src/pt_br.ts"],

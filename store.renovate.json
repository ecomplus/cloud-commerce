{
  "extends": [
    "config:base"
  ],
  "schedule": [
    "after 6am and before 10am on monday"
  ],
  "labels": [
    "dependencies"
  ],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "excludePackagePrefixes": [
        "@ecomplus",
        "@cloudcommerce"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "lockFileMaintenance"
      ],
      "groupName": "Many non-major"
    },
    {
      "matchPackagePrefixes": [
        "@cloudcommerce"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "schedule": [
        "after 11am and before 4pm every weekday"
      ],
      "semanticCommitType": "fix",
      "automerge": true,
      "groupName": "Cloud Commerce bump non-major"
    },
    {
      "matchPackagePrefixes": [
        "@ecomplus"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "schedule": [
        "after 11am and before 4pm every weekday"
      ],
      "semanticCommitType": "fix",
      "groupName": "@ecomplus non-major"
    }
  ],
  "ignoreDeps": ["node", "@astrojs/image", "@astrojs/node"]
}
